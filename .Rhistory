library(ggplot2)
x <- rnorm(100)
y <- rnorm(100)
toplo <- data.frame(x, y)
ggplot(toplo, aes(x, y)) +
geom_point()
ggplot(toplo, aes(x, y)) +
geom_point() +
scale_y_continous(expand = c(0, 1))
ggplot(toplo, aes(x, y)) +
geom_point() +
scale_y_continuous(expand = c(0, 1))
ggplot(toplo, aes(x, y)) +
geom_point() +
scale_y_continuous(expand = c(0, 2))
ggplot(toplo, aes(x, y)) +
geom_point() +
scale_y_continuous(expand = c(2, 2))
ggplot(toplo, aes(x, y)) +
geom_point() +
scale_y_continuous(expand = c(6, 2))
ggplot(toplo, aes(x, y)) +
geom_point() +
scale_y_continuous(expand = c(6))
ggplot(toplo, aes(x, y)) +
geom_point() +
scale_y_continuous(expand = c(0, 0))
ggplot(toplo, aes(x, y)) +
geom_point() +
scale_y_continuous(expand = c(0, 1))
ggplot(toplo, aes(x, y)) +
geom_point() +
scale_y_continuous(expand = c(1, 0))
ggplot(toplo, aes(x, y)) +
geom_point() +
scale_y_continuous(expand = c(0.1, 0))
ggplot(toplo, aes(x, y)) +
geom_point() +
scale_y_continuous(expand = c(0.5, 0))
